<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="crocanbela.crocanbela.TelaPrincipal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="0dp"
            android:background="@mipmap/ic_usuariop"
            android:fontFamily="sans-serif-condensed"
            android:text="UsuÃ¡rios"
            android:textColor="@android:color/background_light"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher_crocanbela_cliente"
            android:fontFamily="sans-serif-condensed"
            android:text="Clientes"
            android:textColor="@android:color/holo_red_light"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_crocanbelaf_produtop"
            android:fontFamily="sans-serif-condensed"
            android:text="Produtos"
            android:textColor="?attr/colorAccent"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_crocanbela_pedidofore"
            android:fontFamily="sans-serif-condensed"
            android:text="Pedidos"
            android:textColor="@android:color/black"
            android:textSize="36sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
